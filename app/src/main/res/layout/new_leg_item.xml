<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTipps"
        android:orientation="vertical"
        android:padding="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/new_image_photo"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/shape" />

            <TextView
                android:id="@+id/new_depart_time"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="14:59 14:59"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frankfurt Hbf(tief)"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="By Callabike 5 bikes available at xxx"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:typeface="monospace"
                android:textStyle="bold"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            android:textAlignment="center"
            android:text="Duration: 10 min distance: 10010 m"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/new_image_photo_2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/shape" />

            <TextView
                android:id="@+id/new_arriv_time"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="to"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_arriv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:text="Frankfurt am Main"
                android:textStyle="bold" />
        </LinearLayout>
        <Button
            android:id="@+id/callabike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open CallaBike"
            android:textColor="@color/colorInputBG"
            android:backgroundTint="@color/colorPrimaryDark"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="#00485e" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>